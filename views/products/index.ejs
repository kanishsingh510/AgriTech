<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= category[0].toUpperCase()+category.slice(1)  %> Products</title>
    <link rel="stylesheet" href="/css/index.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        /* Fallback font if CSS fails to load fast */
        body { font-family: 'Inter', Arial, sans-serif; }
    </style>
    </head>
<body>
    <div class="page">
        <header class="page-header">
            <h1 class="page-title"><%= category[0].toUpperCase()+category.slice(1) %> Products</h1>
            <div class="header-actions">
                <a class="btn btn--primary" href="/products/new">+ New Product</a>
                <% if(category!== 'All') { %>
                    <a class="btn" href="/products">All Products</a>
                <% } %>
            </div>
        </header>

        <nav class="filters">
            <a class="filter <%= category==='All' ? 'is-active' : '' %>" href="/products">All</a>
            <a class="filter <%= category==='fruit' ? 'is-active' : '' %>" href="/products?category=fruit">Fruit</a>
            <a class="filter <%= category==='vegetable' ? 'is-active' : '' %>" href="/products?category=vegetable">Vegetable</a>
            <a class="filter <%= category==='dairy' ? 'is-active' : '' %>" href="/products?category=dairy">Dairy</a>
        </nav>

        <main class="grid">
            <% for(let product of products){ %>
                <article class="card">
                    <div class="card__media">
                        <img
                            src="<%= product.category === 'fruit' ? 'https://images.unsplash.com/photo-1570610155223-59b4b6b90a49?q=80&w=1200&auto=format&fit=crop' : product.category === 'vegetable' ? 'https://images.unsplash.com/photo-1506806732259-39c2d0268443?q=80&w=1200&auto=format&fit=crop' : product.category === 'dairy' ? 'https://images.unsplash.com/photo-1563630423918-6fbb11635bcb?q=80&w=1200&auto=format&fit=crop' : 'https://images.unsplash.com/photo-1501004318641-b39e6451bec6?q=80&w=1200&auto=format&fit=crop' %>"
                            alt="<%= product.category %>"
                            loading="lazy"
                        />
                    </div>
                    <div class="card__body">
                        <h2 class="card__title"><a href="/products/<%= product._id %>"><%= product.name %></a></h2>
                        <div class="card__meta">
                            <span class="price">â‚¹<%= product.price %></span>
                            <a class="category-pill" href="/products?category=<%= product.category %>"><%= product.category %></a>
                        </div>
                    </div>
                    <div class="card__actions">
                        <a class="btn btn--primary" href="/products/<%= product._id %>">View</a>
                        <a class="btn" href="/products/<%= product._id %>/edit">Edit</a>
                    </div>
                </article>
            <% } %>
        </main>
    </div>
</body>

</html>
